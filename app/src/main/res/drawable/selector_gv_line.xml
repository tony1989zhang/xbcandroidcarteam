<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="0.5px" android:color="@color/line_hint_color" />
            <gradient android:angle="270.0" android:endColor="@color/item_list_press" android:startColor="@color/item_list_press" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="@color/item_list_press" android:startColor="@color/item_list_press" />
            <stroke android:width="0.5px" android:color="@color/line_hint_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="270.0" android:endColor="#ffffffff" android:startColor="#ffffffff" />
            <stroke android:width="0.5px" android:color="@color/line_hint_color" />
        </shape>
    </item>
</selector>
