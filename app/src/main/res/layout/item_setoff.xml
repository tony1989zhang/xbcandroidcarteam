<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|left"
        android:weightSum="2"
        android:background="@color/white"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/tv_ltinerary_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:gravity="center_vertical"
            android:minHeight="30dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="龙翔"
            android:layout_weight="1"
            android:textSize="@dimen/text_default_size" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|right"
            android:layout_marginRight="10dp"
            >

            <TextView
                android:id="@+id/tv_kf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_black_selector"
                android:padding="5dp"
                android:text="客服"
                />
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_ltinerary_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_data_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="02月23日 14:23"
                android:textSize="@dimen/text_default_size" />

            <TextView
                android:id="@+id/tv_address_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:maxEms="15"
                android:text="厦门北站商务营运中心3678号5楼享莫某上的方式发送到发送到水电费水电费水电费水电费"
                android:textSize="@dimen/text_default_size" />

            <TextView
                android:id="@+id/tv_dingd_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="订单号：XM201606020001"
                android:textSize="@dimen/text_default_size" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ltinerary_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="单程用车"
                android:textSize="@dimen/text_larght_size"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/tv_ltinerary_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="含税总额：3531元"
                android:layout_gravity="bottom|right"
                android:textSize="@dimen/text_default_size"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />:

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="30dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left"
            android:layout_weight="3"
           >

            <TextView
                android:id="@+id/tv_cancel_dingd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_black_selector"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="取消订单"
                android:textSize="@dimen/text_default_size" />
            <TextView
                android:id="@+id/tv_change_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_black_selector"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="更换车辆"
                android:textSize="@dimen/text_default_size" />
            <TextView
                android:id="@+id/tv_getdriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_black_selector"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="指派司机"
                android:textSize="@dimen/text_default_size" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_weight="1"
            >
        <TextView
            android:id="@+id/tv_setoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_yellow_selector"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:textColor="@drawable/text_yellow_selector"
            android:text="出发"
            android:textSize="@dimen/text_default_size"

            />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
</LinearLayout>
