<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_level"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_white_gray"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_level_total"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/shape_solid_cygreen"
                android:gravity="center"
                android:text="1811"
                android:textColor="@color/white"
                android:textSize="@dimen/text_default_size" />


            <TextView
                android:id="@+id/tv_level_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="享等级"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_default_size" />
        </LinearLayout>


        <View style="@style/lineSolid_height" />

        <LinearLayout
            android:id="@+id/ll_credit"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_white_gray"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_credit_total"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/shape_solid_blue"
                android:gravity="center"
                android:text="1821"
                android:textColor="@color/white"
                android:textSize="@dimen/text_default_size" />


            <TextView
                android:id="@+id/tv_credit_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="信用值"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_default_size" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/lineSolid" />

    <View style="@style/lineSolid" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_month_orders"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_white_gray"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_month_orders_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_default_size" />


            <TextView
                android:id="@+id/tv_month_orders_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="本月接单数(笔)"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_middle_size" />
        </LinearLayout>

        <View style="@style/lineSolid_height" />

        <LinearLayout
            android:id="@+id/ll_today_orders_total"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_white_gray"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_today_orders_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_default_size" />


            <TextView
                android:id="@+id/tv_today_orders_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="今日被抢数(笔)"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_middle_size" />
        </LinearLayout>

        <View style="@style/lineSolid_height" />

        <LinearLayout
            android:id="@+id/ll_my_wall"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/bg_white_gray"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_default_size" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.0dip"
                android:text="综合评价(分)"
                android:textColor="@color/text_default_color"
                android:textSize="@dimen/text_middle_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
