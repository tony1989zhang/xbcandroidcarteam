<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_view_root"
    style="@style/title_bg"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true" >

        <ImageView
            android:id="@+id/title_back"
            style="@style/title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/title_left"
            style="@style/title_text"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shape_solid_dyellow"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/title_larght_text_size"
            android:text="张"
            />

        <TextView
            android:id="@+id/title_name"
            style="@style/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/text_default_size"
            android:text="司机名称"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/title_left" />

        <TextView
            android:id="@+id/title_right"
            style="@style/title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textSize="@dimen/title_right_text_size"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/title_right_img"
            style="@style/title_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:src="@mipmap/home_message_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_em_count"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/unread_dot"
            android:layout_alignParentTop="true"
            android:textSize="@dimen/text_smail_size"
            android:gravity="center"
            android:visibility="gone"
            android:layout_alignRight="@+id/title_right_img"
            android:layout_alignEnd="@+id/title_right_img" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="120dp">
        <TextView
            android:id="@+id/total_amount"
            android:text="3000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="48sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_default_size"
            android:textColor="@color/white"
            android:text="本月成交金额(元)"
            android:layout_below="@+id/total_amount"
            android:layout_centerInParent="true"
         />
    </RelativeLayout>

</LinearLayout>