<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    android:orientation="vertical">

    <www.lvchehui.com.carteam.view.TitleView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginTop="@dimen/margin_top_height"
            android:orientation="vertical">

            <View
                style="@style/lineSolid"

               />

            <LinearLayout
                android:id="@+id/ll_team_type"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_gray"
                android:gravity="center_vertical"
                android:minHeight="48.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="出发日期"
                    android:textColor="@color/text_default_color"
                    android:textSize="15.0sp" />

                <EditText
                    android:id="@+id/et_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    android:hint="请选择出发日期"
                    android:focusable="false"
                    android:maxLines="3"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/text_default_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/item_back_icon"
                    />
            </LinearLayout>

            <View style="@style/lineSolid_center" />

            <LinearLayout
                android:id="@+id/ll_team_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_gray"
                android:gravity="center_vertical"
                android:minHeight="48.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="出发地点"
                    android:textColor="@color/text_default_color"
                    android:textSize="15.0sp" />

                <EditText
                    android:id="@+id/et_start_city"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    android:hint="请选择出发城市"
                    android:maxLines="3"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/text_default_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/item_back_icon"
                    android:visibility="visible"
                    />
            </LinearLayout>

            <View style="@style/lineSolid_center" />
            <LinearLayout
                android:id="@+id/ll_representative"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_gray"
                android:gravity="center_vertical"
                android:minHeight="48.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="接单开始时间"
                    android:textColor="@color/text_default_color"
                    android:textSize="15.0sp" />

                <EditText
                    android:id="@+id/et_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    android:hint="请选择开始时间"
                    android:maxLines="3"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/text_default_size"
                    android:focusable="false" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/item_back_icon"
                    android:visibility="visible"
                    />
            </LinearLayout>

            <View style="@style/lineSolid_center" />

            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_gray"
                android:gravity="center_vertical"
                android:minHeight="48.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="接单结束时间"
                    android:textColor="@color/text_default_color"
                    android:textSize="15.0sp" />

                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    android:hint="请输入地址"
                    android:focusable="false"
                    android:maxLines="3"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/text_default_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/item_back_icon"
                    />
            </LinearLayout>
            <View style="@style/lineSolid_center" />

            <LinearLayout
                android:id="@+id/ll_area"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_gray"
                android:gravity="center_vertical"
                android:minHeight="48.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="所属地区＊"
                    android:textColor="@color/text_default_color"
                    android:textSize="15.0sp" />

                <EditText
                    android:id="@+id/et_area"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    android:hint="请选择所属地区"
                    android:focusable="false"
                    android:maxLines="3"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/text_default_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/item_back_icon"
                    />
            </LinearLayout>

            <View style="@style/lineSolid_center" />


            <LinearLayout
                android:id="@+id/ll_business_lic_photo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_gray"
                android:gravity="center_vertical"

                android:minHeight="48.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_business_lic_photo"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="营业执照＊"
                    android:textColor="@color/text_default_color"
                    android:textSize="15.0sp" />

                <EditText
                    android:id="@+id/et_business_lic_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:digits="0123456789Xx"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    android:hint="请上传证件"
                    android:maxLength="18"
                    android:focusable="false"
                    android:maxLines="1"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/text_default_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/item_back_icon" />
            </LinearLayout>
            <View style="@style/lineSolid_center" />


            <LinearLayout
                android:id="@+id/ll_road_permit_photo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_gray"
                android:gravity="center_vertical"

                android:minHeight="48.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_road_permit_photo"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="道路经营许可证＊"
                    android:textColor="@color/text_default_color"
                    android:textSize="15.0sp" />

                <EditText
                    android:id="@+id/et_road_permit_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:digits="0123456789Xx"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    android:hint="请上传证件"
                    android:maxLength="18"
                    android:focusable="false"
                    android:maxLines="1"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/text_default_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/item_back_icon" />
            </LinearLayout>

            <View style="@style/lineSolid_center" />


            <LinearLayout
                android:id="@+id/ll_account"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_gray"
                android:gravity="center_vertical"

                android:minHeight="48.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="对公账户＊"
                    android:textColor="@color/text_default_color"
                    android:textSize="15.0sp" />

                <EditText
                    android:id="@+id/et_account"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:digits="0123456789Xx"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    android:hint="请输入信息"
                    android:maxLength="18"
                    android:focusable="false"
                    android:maxLines="1"
                    android:textColor="@color/text_default_color"
                    android:textSize="@dimen/text_default_size" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/item_back_icon"
                    />
            </LinearLayout>


            <View style="@style/lineSolid" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:gravity="right"
                android:background="@color/main_color"
                android:text="带＊必须填写" />
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/include_btn_submit" />
</LinearLayout>
